#!/bin/bash

## Installing packages
PACMAN=(
  "cliphist"
  "fcitx5"
  "fcitx5-configtool"
  "fcitx5-mozc"
  "ffmpeg"
  "fzf"
  "grim"
  "hyprland"
  "hyprpaper"
  "hyprpicker"
  "lazygit"
  "libnotify"
  "man"
  "npm"
  "pacman-contrib"
  "pavucontrol"
  "pcmanfm"
  "pulseaudio"
  "pulseaudio-alsa"
  "pulseaudio-bluetooth"
  "ranger"
  "ripgrep"
  "slurp"
  "swappy"
  "swaync"
  "tmux"
  "unzip"
  "waybar"
  "wl-clipboard"
  "wofi"
)
YAY=(
  "anki-bin"
  "kwindowsystem"
  "nerd-fonts"
  "noto-fonts-cjk" 
  "noto-fonts-emoji" 
  "python-pywal16"
  "ttf-font-awesome"
  "ttf-hack-nerd"
  "ttf-icomoon-feather"
  "ttf-iosevka-nerd"
  "ttf-jetbrains-mono-nerd"
  "zen-browser-bin"
)

## Taken wallhaven.cc
WALLHAVEN=(
  "https://w.wallhaven.cc/full/8o/wallhaven-8opwv2.png" # Arisu
  "https://w.wallhaven.cc/full/5g/wallhaven-5gyjw3.jpg" # Arisu
  "https://w.wallhaven.cc/full/9d/wallhaven-9d612x.png" # Mari
  "https://w.wallhaven.cc/full/rr/wallhaven-rrep8j.jpg" # Momoi
  "https://w.wallhaven.cc/full/p9/wallhaven-p9xqpm.jpg" # Momoi & Midori
  "https://w.wallhaven.cc/full/we/wallhaven-wel3l7.jpg" # Momoi & Midori
)

## To be copied
CONF=(
  ".bashrc"
  ".gitconfig"
  ".config/"
  ".local/"
)

packages() {
  # Check if yay is installed
  if [[ ! -f /usr/bin/yay ]]; then
    pushd /tmp/
    git clone https://aur.archlinux.org/yay.git
    pushd /tmp/yay/
    makepkg -si
    popd && popd
  fi

  for package in "${PACMAN[@]}"; do
    sudo pacman -S --noconfirm "${package}"
  done
  for package in "${YAY[@]}"; do
    yay -S --noconfirm "${package}"
  done
}

wallpaper() {
  for url in "${WALLHAVEN[@]}"; do
    mkdir -p $HOME/Pictures/
    curl -O --output-dir $HOME/Pictures/ "${url}"
  done
}

copy_mod() {
  for copy in "${CONF[@]}"; do
    cp -r "$PWD/${copy}" $HOME/
  done
  chmod +x $HOME/.local/bin/*
}

clone_neovim() {
  NEOVIM_DIR="$HOME/.config/nvim/"
  if [[ -z "$(ls -A "${NEOVIM_DIR}")" ]]; then
    git clone https://github.com/MuteSTEVE/nvim.git "${NEOVIM_DIR}"
  fi
}

main() {
  packages
  copy_mod
  wallpaper
  clone_neovim
}
main
